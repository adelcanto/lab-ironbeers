<div class="random-beer">
    <div class="random-beer-container">
        {{#each beers}}
        <div class="img-container">
            <img class="partial-img" src="{{this.image_url}}" alt="random beer image">
        </div>
        <div class="article-container">
            <h1>{{this.name}}</h1>
            <h2>{{this.tagline}}</h2>
            <p>{{this.description}}</p>
            <h3>Food pairing</h3>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>Brewers tips: {{this.brewers_tips}}</p>
        </div>
        {{/each}}
    </div>

</div>