<div class="random-beer">
    <div class="random-beer-container">
        {{!-- {{#each beers}} --}}
        <div class="img-container">
            <img class="partial-img" src="{{image_url}}" alt="random beer image">
        </div>
        <div class="article-container">
            <h1>{{name}}</h1>
            <h2>{{tagline}}</h2>
            <p>{{description}}</p>
            <h3>Food pairing</h3>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>Brewers tips: {{brewers_tips}}</p>
        </div>
        {{!-- {{/each}} --}}
    </div>

</div>